{
    "name": "cleverage/sylius-dpd-plugin",
    "type": "sylius-plugin",
    "description": "Simple DPD REST Plugin for Sylius",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "sylius-dpd",
        "sylius-dpd-plugin",
        "dpd",
        "dpd-plugin",
        "dpd-webservices"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Castera",
            "email": "jcastera@clever-age.com",
            "homepage": "https://juliencastera.fr"
        },
        {
            "name": "Clever Age",
            "homepage": "https://www.clever-age.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "sylius/sylius": "~1.8.0 || ~1.9.0 || ~1.10.0 || ~1.11.0 || ~1.12.0 || ~1.13.0 || ~1.14.0",
        "ext-simplexml": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-debug-extension": "^2.0.0",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friendsofsymfony/oauth-server-bundle": "^1.6 || >2.0.0-alpha.0 ^2.0@dev",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "0.12.99",
        "phpstan/phpstan-doctrine": "0.12.33",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpstan/phpstan-webmozart-assert": "0.12.12",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^4.0",
        "symfony/browser-kit": "^4.4 || ^5.2 || ^5.4 || ^6.0",
        "symfony/debug-bundle": "^4.4 || ^5.2 || ^5.4 || ^6.0",
        "symfony/dotenv": "^4.4 || ^5.2 || ^5.4 || ^6.0",
        "symfony/intl": "^4.4 || ^5.2 || ^5.4 || ^6.0",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2 || ^5.4 || ^6.0",
        "vimeo/psalm": "4.7.1",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "symfony/thanks": false,
            "phpstan/extension-installer": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.10-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "CleverAge\\SyliusDpdPlugin\\": "src/",
            "Tests\\CleverAge\\SyliusDpdPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ]
    }
}
